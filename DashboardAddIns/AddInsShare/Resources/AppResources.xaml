          <Ellipse Height="10"
                   Width="10"
                   RenderTransformOrigin="0.5,0.5"
                   x:Name="ellipse"
                   IsHitTestVisible="False">
            <Ellipse.RenderTransform>
              <ScaleTransform />
            </Ellipse.RenderTransform>
            <Ellipse.Fill>
              <RadialGradientBrush>
                <GradientStop Color="#00FF0000" />
                <GradientStop Color="Blue"
                              Offset="0.25" />
                <GradientStop Color="#00FF0000"
                              Offset="0.5" />
                <GradientStop Color="Blue"
                              Offset="0.75" />
                <GradientStop Color="#00FF0000"
                              Offset="1" />

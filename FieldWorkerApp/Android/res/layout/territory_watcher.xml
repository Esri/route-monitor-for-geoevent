<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<RelativeLayout
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:paddingTop="2dp"
		android:paddingBottom="2dp">
		<ImageView android:id="@+id/icon" 
		    android:src="@drawable/territory_watcher" 
		    android:layout_width="32dp" 
		    android:layout_height="32dp" 
		    android:layout_marginTop="4dp" 
		    android:layout_marginLeft="4dp" 
		    android:layout_marginRight="10dp"
		    android:layout_marginBottom="4dp">
		</ImageView>
		
		<TextView android:id="@+id/message_name" 
		    android:text="@+id/message_name" 
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:layout_toRightOf="@id/icon"
		    android:textSize="15dp"
		    android:textStyle="bold">
		</TextView>
		
		<TextView android:id="@+id/dispatch_type" 		    
		    android:text="@+id/dispatch_type" 
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:layout_toRightOf="@id/icon"
		    android:layout_below="@id/message_name"
		    android:textSize="14dp">
		</TextView>
		
		<TextView android:id="@+id/received_time" 		    
		    android:text="@+id/received_time" 
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:layout_alignBottom="@+id/message_from"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
		    android:textSize="12dp">
		</TextView>
		
		<TextView android:id="@+id/description" 		    
		    android:text="@+id/description" 
		    android:layout_marginTop="10dp" 
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"
		    android:layout_below="@id/dispatch_type"
		    android:layout_marginLeft="5dp" 
		    android:layout_marginRight="5dp" 
		    android:layout_marginBottom="5dp"
		    android:textSize="15dp">
		</TextView>
		
		<Button
                android:id="@+id/buttonAcknowledge"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/description"
                android:text="@string/please_acknowledge"
                android:layout_centerHorizontal="true" />
		
   	</RelativeLayout>
</ScrollView>

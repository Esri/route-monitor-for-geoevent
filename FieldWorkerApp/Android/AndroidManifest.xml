<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="esri.mrm.mobile"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- android:theme="@style/CustomTheme" -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="esri.mrm.mobile.AGSObjects"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyLightTheme.NoShadow" >
        <activity
            android:name="esri.mrm.mobile.activity.FieldWorkerAppPreference"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="esri.mrm.mobile.activity.EsriMrmActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="esri.mrm.mobile.activity.WorkOrdersActivity"
            android:label="@string/act_workorders" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.TAB" />
            </intent-filter>
        </activity>
        <activity
            android:name="esri.mrm.mobile.activity.NavigationActivity"
            android:label="@string/act_navigation" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.TAB" />
            </intent-filter>
        </activity>
        <activity
            android:name="esri.mrm.mobile.activity.MessagesActivity"
            android:label="@string/act_messages" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.TAB" />
            </intent-filter>
        </activity>
        <activity
            android:name="esri.mrm.mobile.activity.HistoryActivity"
            android:label="@string/act_history" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.TAB" />
            </intent-filter>
        </activity>
        <activity android:name="esri.mrm.mobile.activity.WorkOrderDetailActivity" >
        </activity>
        <activity android:name="esri.mrm.mobile.activity.DispatchActivity" >
        </activity>
        <activity android:name="esri.mrm.mobile.activity.RunningLateReasonActivity" >
        </activity>
        <activity
            android:name="esri.mrm.mobile.activity.ExitedTerritoryReasonActivity"
            android:label="@string/act_exited_territory" >
        </activity>
        <activity android:name="esri.mrm.mobile.activity.StopTypeActivity" >
        </activity>
        <activity android:name="esri.mrm.mobile.activity.WorkOrdersTabGroupActivity" >
        </activity>
        <activity android:name="esri.mrm.mobile.activity.NavigationTabGroupActivity" >
        </activity>
        <activity android:name="esri.mrm.mobile.activity.MessagesTabGroupActivity" >
        </activity>
        <activity android:name="esri.mrm.mobile.activity.HistoryTabGroupActivity" >
        </activity>
        <activity
            android:name="esri.mrm.mobile.activity.LoginActivity"
            android:label="@string/app_name" 
            
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>